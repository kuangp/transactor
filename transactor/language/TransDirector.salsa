module transactor.language;

import java.util.*;

/*
 * Transaction Director creates a new pinger to use in conjunction with a new transaction
 */
behavior TransDirector extends Transactor {

    public TransDirector(){
        super(self);
    }

    public void startTransaction(Object[] transaction){
        this.stabilize();
        PingDirector director = (PingDirector)this.newTActor(new PingDirector());
        this.sendMsg("pingStart", transaction, director);
    }
}
